########## global defaults ##########
IgnoreUnknown AddKeysToAgent,Include

Host *

  GSSAPIDelegateCredentials no
  ServerAliveInterval 30
#  ControlMaster auto
#  ControlPath ~/.ssh/master-%r@%h:%p

##### github port 443 for bypass ssh blocking #####
Host github.com
  Hostname ssh.github.com
  Port 443

Host *.peterlyons.com peterlyons.com
  User plyons
  AddKeysToAgent yes
  ForwardAgent yes

Host zooz
  AddKeysToAgent yes
  HostName zooz.peterlyons.com
  User plyons

Host rsg-50073.local
  User peterlyons
  addKeysToAgent yes

# Include ~/git.peterlyons.com/mailchimp/ssh-config
# This section MUST be ABOVE any ScaleFT-related configuration directives,
# so that it can match first.
Host 192.168.213.101
    # This stops ssh from saving the host key. The host key
    # changes from time to time, and saving it causes SSH to throw up
    # a scary warning every time it changes.
    UserKnownHostsFile /dev/null
 
    # This virtual machine runs locally, using a system image that we control,
    # so we don't need to approve the host key every time.
    # You *never* want to enable this setting for production hosts that are
    # external to your laptop.
    StrictHostKeyChecking no
 
 
    # Silence warnings about unknown host keys. Since we're storing
    # the host keys in /dev/null, they'll be unknown every time.
    LogLevel FATAL
 
    # This prevents the ssh client from trying to use ScaleFT
    ProxyCommand none

# To use ScaleFT proxycommand, add this configuration block to your $HOME/.ssh/config
# Match exec "/usr/local/bin/sft resolve -q  %h"
#     ProxyCommand "/usr/local/bin/sft" proxycommand  %h
#     UserKnownHostsFile "/Users/peterlyons/Library/Application Support/ScaleFT/proxycommand_known_hosts"

