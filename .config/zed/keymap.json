[
  {
    "context": "Editor && !showing_completions",
    "bindings": {
      "ctrl-t": "editor::ShowCompletions",
      // "enter": "editor::Newline"
      "shift-space e f": "editor::Format"
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      // "j k": "vim::NormalBefore"
      "ctrl-t": "editor::ShowCompletions"
    }
  },
  {
    "bindings": {
      "cmd-shift-o": "workspace::Open"
    }
  },
  {
    "bindings": {
      "cmd-o": "file_finder::Toggle"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "cmd-p": "command_palette::Toggle"
    }
  },
  {
    "context": "Editor && showing_completions",
    "bindings": {
      "tab": "editor::ConfirmCompletion",
      "shift-enter": "editor::ConfirmCompletion",
      "enter": "editor::Newline"
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "shift-space w c": "workspace::CloseAllItemsAndPanes"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
       "ctrl+c": "editor::Copy"
    }
  },
  {
    "context": "Editor && vim_mode == visual",
    "bindings": {
       "ctrl+c": "editor::Copy"
    }
  }
]
