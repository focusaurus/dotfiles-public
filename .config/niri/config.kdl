window-rule {
  match app-id="yad"
  open-floating true
}

window-rule {
    match app-id="firefox" title="calendar:"
    open-on-workspace "2"
}

window-rule {
    match app-id="firefox" title="music:"
    open-on-workspace "2"
}

window-rule {
    match app-id="firefox" title="trello:"
    open-on-workspace "2"
}

window-rule {
    match app-id="ario"
    open-on-workspace "2"
}

window-rule {
  match app-id="sirula"
  min-height 800
  open-floating false
}
