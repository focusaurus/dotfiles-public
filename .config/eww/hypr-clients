#!/usr/bin/env bash

# Please Use Google Shell Style: https://google.github.io/styleguide/shell.xml

# ---- Start unofficial bash strict mode boilerplate
# http://redsymbol.net/articles/unofficial-bash-strict-mode/
set -o errexit  # always exit on error
set -o errtrace # trap errors in functions as well
set -o pipefail # don't ignore exit codes when piping output
set -u          # error on reference to unknown variable
# set -x # enable debugging

IFS=$'\n\t'
# ---- End unofficial bash strict mode boilerplate

hyprctl -j clients | jq '
  def get_emoji(class; title): 
    if class == null then ""
    elif (class | ascii_downcase | test("firefox")) then
      if (title | startswith("main:")) then "ğŸŒ"
      elif (title | startswith("calendar:")) then "ğŸ“…"
      elif (title | startswith("music:")) then "ğŸµ"
      elif (title | startswith("trello:")) then "âœ…"
      else "ğŸŒ"
      end
    elif (class | ascii_downcase | test("chrom")) then "ğŸŒ"
    elif (class | ascii_downcase | test("code")) then "ğŸ’»"
    elif (class | ascii_downcase | test("vim|nvim")) then "ğŸ“"
    elif (class | ascii_downcase | test("terminal|kitty|alacritty|wezterm|xterm")) then "ğŸ–¥ï¸"
    elif (class | ascii_downcase | test("dolphin|nautilus|thunar|pcmanfm")) then "ğŸ“"
    elif (class | ascii_downcase | test("discord")) then "ğŸ’¬"
    elif (class | ascii_downcase | test("slack")) then "ğŸ’¼"
    elif (class | ascii_downcase | test("telegram")) then "ğŸ“±"
    elif (class | ascii_downcase | test("spotify|rhythmbox|ario|clementine")) then "ğŸµ"
    elif (class | ascii_downcase | test("vlc|mpv|totem")) then "ğŸ¬"
    elif (title | ascii_downcase | test("gofi")) then "ğŸ”ƒ"
    elif (class | ascii_downcase | test("inkscape")) then "âœï¸"
    elif (class | ascii_downcase | test("libreoffice|writer|calc|gedit")) then "ğŸ“„"
    elif (class | ascii_downcase | test("thunderbird|evolution|mail")) then "ğŸ“§"
    elif (class | ascii_downcase | test("steam")) then "ğŸ®"
    elif (class | ascii_downcase | test("obsidian")) then "ğŸª¨"
    elif (class | ascii_downcase | test("zoom")) then "ğŸ“"
    else ""
    end;

  sort_by(.workspace.id) | map(. + {emoji: get_emoji(.class; .title)})'
