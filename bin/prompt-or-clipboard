#!/usr/bin/env bash

# Please Use Google Shell Style: https://google.github.io/styleguide/shell.xml

# ---- Start unofficial bash strict mode boilerplate
# http://redsymbol.net/articles/unofficial-bash-strict-mode/
set -o errexit  # always exit on error
set -o errtrace # trap errors in functions as well
set -o pipefail # don't ignore exit codes when piping output
set -o posix    # more strict failures in subshells
# set -x          # enable debugging

IFS=$'\n\t'
# ---- End unofficial bash strict mode boilerplate

value=
label="${1:-value}"
clipboard_preview=$(~/bin/paste | head -c 12 | tr '\n' ' ')
text=$(
  cat <<EOF
<span font="Helvetica Bold 24">${label}</span>
<span font="Inconsolata 12">ENTER for</span><span font="Noto Emoji 12">ðŸ“‹</span><span font="Inconsolata 12">${clipboard_preview}</span>
EOF
)

if true; then
  #if [[ "${X}" == "1" || ! -t 1 ]]; then
  # echo "${clipboard_preview}" >/dev/tty
  if [[ "${MULTILINE}" == "true" ]]; then
    value=$(yad --title "${label}" \
      --text "ctrl+ENTER when ready" \
      --width 500 --height 500 \
      --form --separator="" --field=Entry:TXT |
      sed -e 's/\\n/\n/g' -e '$ s/|$//')
  else
    value=$(yad --entry --title "${label}" --text "${text}" --width 500)
  fi
else
  value=$(zsh -c "value=; vared -p \"${label}: \" value; echo \"\${value}\"")
fi
if [[ -z "${value}" ]]; then
  ~/bin/paste
else
  echo "${value}"
fi
