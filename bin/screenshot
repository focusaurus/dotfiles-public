#!/usr/bin/env bash

# Please Use Google Shell Style: https://google.github.io/styleguide/shell.xml

# ---- Start unofficial bash strict mode boilerplate
# http://redsymbol.net/articles/unofficial-bash-strict-mode/
set -o errexit  # always exit on error
set -o errtrace # trap errors in functions as well
set -o pipefail # don't ignore exit codes when piping output
# set -x          # enable debugging

IFS="$(printf "\n\t")"
# ---- End unofficial bash strict mode boilerplate
macos_dir="/Applications/flameshot.app/Contents/MacOS"
if [[ -e "${macos_dir}/flameshot" ]]; then
  export PATH="${macos_dir}:${PATH}"
elif [[ "$(uname)" == "Darwin" ]]; then
  cliclick kd:cmd,shift t:5 ku:cmd,shift
  exit
fi
destdir="${HOME}/screens"
mkdir -p "${destdir}"
suffix="$1"
timestamp=$(date '+%Y-%m-%d-%H%M%S')
destfile="screen-${timestamp}-${suffix}.png"
out="${destdir}/${destfile}"
tool=flameshot
if [[ "${XDG_SESSION_TYPE}" == "wayland" ]]; then
  tool=grim
fi
case "${tool}" in
grim)
  grim -g "$(slurp)" - | swappy --file - --output-file - > "${out}"
  ;;
hyprshot)
  hyprshot --mode region --output-folder "${destdir}" --filename "${destfile}" || true
  ;;
flameshot)
  declare -a args

  if [[ "$1" == "delay" ]]; then
    # Use this branch for getting pointer/hover stuff
    args+=(full -d 4000)
    shift
  else
    # Use this branch for specific area, no pointer
    args+=(gui)
  fi
  args+=(--path "${out}")
  flameshot "${args[@]}"
  ;;
esac

echo "${out}"

#------- code graveyard

