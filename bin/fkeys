  shift+f9)
    ~/git.peterlyons.com/dotfiles/fuzzball/journal-mailchimp-standup
    ;;
  # f11)
    # new_workspace=$((current_workspace - 1))
    # if [[ ${new_workspace} -lt 0 ]]; then
    #   new_workspace=1
    # fi
    # xdotool set_desktop "${new_workspace}"
    # ;;
  # shift+f11)
    # new_workspace=$((current_workspace - 1))
